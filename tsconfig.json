{
    "compilerOptions": {
        "lib": ["ES2020"],
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "dist",
        "declaration": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "incremental": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "inlineSources": false,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedIndexedAccess": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@project/*": ["src/*"],
            "@tests/project/*": ["tests/src/*"]
        }
    },
    "include": ["behaviorDriven", "src", "tests/src", "tests/behaviorDriven", "migrations"],
    "exclude": ["node_modules"],
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended"
}
