{
    "name": "@project",
    "description": "Personal Project",
    "version": "0.0.2",
    "main": "./dist/index.js",
    "type": "commonjs",
    "source": "./src/index.ts",
    "types": "./dist/index.d.ts",
    "scripts": {
        "build": "nest build",
        "start": "node dist/main",
        "start:dev": "nest start --watch",
        "start:dev:withDocker": "docker-compose up -d && npm run start:dev",
        "start:consumer:dev": "nest start --config consumer.json --watch",
        "test": "npm run test:jest && npm run test:cucumber",
        "test:jest": "jest",
        "test:jest:dev": "jest --verbose --watchAll",
        "test:cucumber": "cucumber-js tests/behaviorDriven",
        "test:ci": "npm run test:jest --coverage && npm run test:cucumber",
        "lint": "npm run lint:eslint && npm run lint:tsc && npm run lint:proto",
        "lint:eslint": "eslint --max-warnings 0 --ext .js,.jsx,.ts,.tsx ./",
        "lint:tsc": "tsc --noEmit",
        "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/Project/Shared/Infrastructure/Persistence/cli.config.ts",
        "migration:generate": "npm run typeorm migration:generate -- -n",
        "migration:create": "npm run typeorm migration:create -- -n",
        "migration:run": "npm run typeorm migration:run",
        "migration:revert": "npm run typeorm migration:revert",
        "prepare": "husky install"
    },
    "license": "UNLICENSED",
    "private": true,
    "devDependencies": {
        "@cucumber/cucumber": "^8.0.0",
        "@cucumber/pretty-formatter": "^1.0.0-alpha.1",
        "@faker-js/faker": "^6.0.0-alpha.7",
        "@nestjs/cli": "^9.0.0",
        "@nestjs/schematics": "^9.0.1",
        "@nestjs/testing": "^9.0.4",
        "@types/express": "^4.17.13",
        "@types/ioredis": "^4.28.10",
        "@types/jest": "^27.4.0",
        "@types/lodash.ismatch": "^4.4.6",
        "@types/supertest": "^2.0.11",
        "@types/uuid": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "^5.38.0",
        "@typescript-eslint/parser": "^5.38.0",
        "eslint": "^8.23.1",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-plugin-hexagonal-architecture": "^1.0.3",
        "eslint-plugin-jest": "^26.1.3",
        "husky": "^8.0.0",
        "jest": "^27.5.1",
        "jest-mock-extended": "^2.0.5",
        "prettier": "^2.5.1",
        "supertest": "^6.2.2",
        "ts-jest": "^27.1.3",
        "ts-morph": "^15.1.0",
        "tsconfig-paths": "^3.10.1",
        "tslib": "^2.3.0",
        "typescript": "4.4.4"
    },
    "dependencies": {
        "@nestjs/common": "^9.0.4",
        "@nestjs/config": "^2.0.0",
        "@nestjs/core": "^9.0.4",
        "@nestjs/platform-express": "^9.0.4",
        "@types/source-map-support": "^0.5.4",
        "amqp-ts": "^1.8.0",
        "dd-trace": "^2.4.2",
        "env-var": "^7.1.1",
        "express-winston": "^4.2.0",
        "kafkajs": "^1.15.0",
        "lint-staged": "^13.0.3",
        "mysql2": "^2.3.3",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.2.0",
        "source-map-support": "^0.5.21",
        "ts-node": "^10.5.0",
        "typeorm": "^0.2.43",
        "uuid": "^8.3.2",
        "uuid-buffer": "^1.0.3",
        "winston": "^3.6.0"
    },
    "lint-staged": {
        "*.{ts,js}": "eslint --cache --fix",
        "*.{ts,js,json}": "prettier --write"
    }
}
